<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:text="Log in"
            android:layout_width="121dp"
            android:layout_height="61dp" android:id="@+id/Login"
            android:layout_marginEnd="60dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="65dp"
            app:layout_constraintStart_toEndOf="@+id/Skip" android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordText"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="213dp"/>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar2"
    />
    <EditText
            android:layout_width="227dp"
            android:layout_height="61dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordText"
            android:layout_marginEnd="92dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp"
            android:layout_marginTop="7dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0" android:hint="Enter your password"/>
    <TextView
            android:text="Password"
            android:layout_width="89dp"
            android:layout_height="24dp" android:id="@+id/textView2"
            android:textSize="20sp"
            android:layout_marginEnd="230dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/passwordText" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/loginText"/>
    <TextView
            android:text="Log in"
            android:layout_width="161dp"
            android:layout_height="50dp" android:id="@+id/textView3"
            android:textSize="34sp" android:lineSpacingExtra="12sp"
            android:textStyle="bold" android:textColor="#000000"
            tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/toolbar2" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Login"
            android:layout_width="84dp"
            android:layout_height="30dp" android:id="@+id/textView4"
            android:textSize="20sp"
            android:layout_marginEnd="235dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp" android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2"
            app:layout_constraintBottom_toTopOf="@+id/loginText"/>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:text="Skip"
            android:layout_width="121dp"
            android:layout_height="62dp" android:id="@+id/Skip"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="213dp" android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="60dp"
            app:layout_constraintEnd_toStartOf="@+id/Login"
            android:layout_marginEnd="64dp"/>
    <EditText
            android:layout_width="227dp"
            android:layout_height="64dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/loginText"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginEnd="95dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp" app:layout_constraintHorizontal_bias="0.0"
            android:hint="Enter your login"/>
</androidx.constraintlayout.widget.ConstraintLayout>